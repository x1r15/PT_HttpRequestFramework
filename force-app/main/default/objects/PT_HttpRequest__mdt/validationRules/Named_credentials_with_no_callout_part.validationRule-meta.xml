<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Named_credentials_with_no_callout_part</fullName>
    <active>true</active>
    <errorConditionFormula>REGEX(LOWER(PT_NamedCredentials__c), &apos;^callout:.*&apos;)</errorConditionFormula>
    <errorDisplayField>PT_NamedCredentials__c</errorDisplayField>
    <errorMessage>Please use only the name of the Named Credentials - remove the &quot;callout:&quot; part.</errorMessage>
</ValidationRule>
